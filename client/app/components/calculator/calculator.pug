.calculator
  md-card
    md-card-content
      .screen
        md-card
          md-card-content
            .result
              p.md-title {{ $ctrl.result }}
              p.md-caption(pretty-array pretty-array-item="$ctrl.userInputs")
      .keypad
        md-card
          md-card-content(layout="row")
            .keypad-row(layout="column")
              md-button.md-raised.md-fab.md-mini.keypad-option(layout-wrap, ng-click="$ctrl.clearUserInputs(true);") 
                span AC
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(7);") 
                span 7
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(4);")
                span 4
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(1);")
                span 1
              md-button.md-raised.md-fab.md-mini.keypad-option(layout-wrap disabled) 
                span ()
            .keypad-row(layout="column")
              md-button.md-raised.md-fab.md-mini.keypad-option(layout-wrap disabled) 
                span.md-primary %
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(8);") 
                span 8
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(5);") 
                span 5
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(2);") 
                span 2
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(0);") 
                span 0
            .keypad-row(layout="column") 
              md-button.md-raised.md-fab.md-mini.keypad-option(layout-wrap disabled) 
                span +-
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(9);") 
                span 9
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(6);") 
                span 6
              md-button.md-raised.md-fab.md-mini.keypad-number(layout-wrap ng-click="$ctrl.addUserInputs(3);") 
                span 3
              md-button.md-raised.md-fab.md-mini.keypad-option(layout-wrap ng-click="$ctrl.addUserInputs('.');") 
                span .
            .keypad-row(layout="column")
              md-button.md-fab.md-mini(layout-wrap, ng-click="$ctrl.addUserInputs('add');") +
              md-button.md-fab.md-mini(layout-wrap, ng-click="$ctrl.addUserInputs('subtract');") -
              md-button.md-fab.md-mini(layout-wrap, ng-click="$ctrl.addUserInputs('multiply');") *
              md-button.md-fab.md-mini(layout-wrap, ng-click="$ctrl.addUserInputs('divide');") /
              md-button.md-primary.md-fab.md-mini(layout-wrap, ng-click="$ctrl.getResult();") =
            //.keypad-row
              .button-container(layout="column")
                md-button.md-button.md-primary(layout-wrap ng-click="$ctrl.clearUserInputs(true);") Reset
                md-button.md-button.md-primary(layout-wrap ng-click="$ctrl.clearUserInputs(false);") Remove last                
                md-button.md-button.md-primary.md-raised(layout-wrap ng-click="$ctrl.getResult();") Enter
